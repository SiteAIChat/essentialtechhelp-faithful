---
const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Services', href: '/services' },
  { label: 'Portfolio', href: '/portfolio' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '/contact' },
];
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <div class="flex-shrink-0">
        <a href="/">
          <img src="https://essentialtechhelp.com/wp-content/uploads/2023/01/Essential-Tech-Help-Logo-500-%C3%97-150-px.png" alt="Essential Tech Help" class="h-12" />
        </a>
      </div>
      
      <div class="hidden md:flex space-x-8">
        {navItems.map(item => (
          <a href={item.href} class="text-[#333333] hover:text-[#0066cc] font-body font-semibold transition-colors duration-200">
            {item.label}
          </a>
        ))}
      </div>

      <div class="hidden md:block">
        <a href="/contact" class="bg-[#0066cc] text-white px-6 py-2 rounded font-semibold hover:bg-[#0055aa] transition-colors duration-200">
          Get Started
        </a>
      </div>

      <button class="md:hidden text-[#333333]">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
</header>