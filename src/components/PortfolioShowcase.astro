---
const projects = [
  {
    title: 'Check out our work on ChallengeLaunchToolkit.com',
    image: 'https://essentialtechhelp.com/wp-content/uploads/2023/01/003-web-programming.png',
  },
  {
    title: 'Check out our work on DigitalWayfinders.com',
    image: 'https://essentialtechhelp.com/wp-content/uploads/2023/01/004-rocket.png',
  },
];
---

<section class="py-16 md:py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-8 md:gap-12">
      {projects.map(project => (
        <div class="text-center">
          <div class="mb-6 flex justify-center">
            <img src={project.image} alt={project.title} class="h-32 w-32 object-contain" />
          </div>
          <h2 class="font-heading font-bold text-xl md:text-2xl text-[#333333]">
            {project.title}
          </h2>
        </div>
      ))}
    </div>
  </div>
</section>