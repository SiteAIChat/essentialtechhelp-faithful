---
interface Props {
  image?: string;
  title?: string;
  description?: string;
  reverse?: boolean;
}
const { image = "", title = "", description = "", reverse = false } = Astro.props;
---

<div class={`flex flex-col ${reverse ? 'md:flex-row-reverse' : 'md:flex-row'} items-center gap-8 md:gap-12`}>
  <div class="flex-1">
    <img src={image} alt={title} class="w-full max-w-md mx-auto" />
  </div>
  <div class="flex-1">
    <h2 class="font-heading font-bold text-2xl md:text-3xl text-[#333333] mb-4">
      {title}
    </h2>
    <p class="text-lg text-[#333333] leading-relaxed">
      {description}
    </p>
  </div>
</div>